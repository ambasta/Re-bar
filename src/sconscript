import os

Import('env')
env = env.Clone()
newenv = env.Clone()

projectLibs = ['graph', 'reader', 'constrained', 'dijkstra', 'distributor', 'kinesis']

libraries = list()

for subdir in projectLibs:
    print('Building> ' + subdir);
    library = env.SConscript(
        '{folderName}/sconscript'.format(folderName=subdir),
        {'env': env}
    )
    print('Adding library: {}'.format(library))
    libraries.append(library)

env.Append(LIBS=libraries)
env.Append(LIBS=['boost_graph', 'bsoncxx', 'mongocxx', 'mongoc-1.0'])
env.Program('solver', ['solver.cxx'])

newenv.Append(LIBS=['aws-cpp-sdk-kinesis', 'aws-cpp-sdk-core'])
newenv.Program('fletcher', ['fletcher.cxx'])
